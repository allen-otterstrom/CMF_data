# Gemfile
source "https://rubygems.org"

# Core Jekyll gem
gem "jekyll", "~> 5.0"

# Optional but common plugins
gem "jekyll-seo-tag"      # For SEO metadata
gem "jekyll-feed"         # For RSS feeds
gem "jekyll-sitemap"      # Generates sitemap.xml
gem "jekyll-paginate"     # Pagination support

# If you use GitHub Pages locally for testing
gem "webrick", "~> 1.7"   # Required for Jekyll server on Ruby >=3.0
